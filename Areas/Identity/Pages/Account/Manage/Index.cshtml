@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row container">
    <div class="col-8">
        <form id="profile-form" method="post" class="col-8">
            @if (!string.IsNullOrEmpty(Model.ImageFileName))
            {
                <div>
                    <img src="~/images/@Model.ImageFileName" alt="Profile Image" width="150" height="150" />
                </div>
            }
            else
            {
                <p>No profile image available</p>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" placeholder="Please choose your username." />
                <label asp-for="Input.Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please choose your Name." />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>       
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Bio" class="form-control" placeholder="Please choose your Bio." />
                <label asp-for="Input.Bio" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Gender" class="form-control" placeholder="Please choose your Gender." />
                <label asp-for="Input.Gender" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Phone" class="form-control" placeholder="Please choose your Phone." />
                <label asp-for="Input.Phone" class="form-label"></label>
            </div>

           @*  <img src="data:@Model.PhotoContentType;base64,@Convert.ToBase64String(Model.PhotoData)" alt="User Photo" /> *@
           @*  <img src="data:@Model.PhotoContentType;base64,@Convert.ToBase64String(Model.PhotoData)" alt="User Photo" /> *@

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
